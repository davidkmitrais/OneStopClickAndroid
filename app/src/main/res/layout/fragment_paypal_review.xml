<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.david_k.oneStopClick.Views.Fragments.PayPalPayment.PaypalReviewFragment">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/paypal_review_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Review" />

        <ImageView
            android:src="@drawable/paypal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/paypal_login_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/paypal_review_detail_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paypal_review_label"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/paypal_review_label"
            android:layout_marginLeft="10dp"
            android:text="Product Detail:"/>

        <TextView
            android:id="@+id/product_detail_info_paypal_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paypal_review_detail_label"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/paypal_review_detail_label"
            android:layout_marginLeft="5dp"
            android:text="Shoe : 3 pcs "/>

        <TextView
            android:id="@+id/product_price_info_paypal_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/product_detail_info_paypal_review_text"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="25dp"
            android:text="$123 USD"/>

        <TextView
            android:id="@+id/paypal_review_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_detail_info_paypal_review_text"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="@id/paypal_review_detail_label"
            android:text="Ship To:"/>

        <TextView
            android:id="@+id/address_line1_detail_info_paypal_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paypal_review_address_label"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/paypal_review_address_label"
            android:layout_marginLeft="5dp"
            android:text="Ngurah Rai Bali"/>

        <TextView
            android:id="@+id/address_line2_detail_info_paypal_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/address_line1_detail_info_paypal_review_text"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/address_line1_detail_info_paypal_review_text"
            android:text="Denpasar, Bali"/>

        <Button
            android:id="@+id/paypal_review_payNow_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/address_line2_detail_info_paypal_review_text"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Pay Now"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
