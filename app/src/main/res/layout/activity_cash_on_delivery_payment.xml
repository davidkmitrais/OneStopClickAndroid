<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david_k.oneStopClick.Views.Activities.PaymentMethods.CashOnDeliveryPaymentActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cod_payment_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/product_detail_cod_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/product_detail_cod_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Detail:"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/product_detail_cod_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toBottomOf="@id/product_detail_cod_label"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/product_detail_name_cod_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="@+id/product_detail_cod_image"/>

                    <TextView
                        android:id="@+id/product_detail_name_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You DontKnow"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@+id/product_detail_name_cod_label"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginLeft="150dp" />

                    <TextView
                        android:id="@+id/product_detail_orderQty_cod_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Qty:"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/product_detail_name_cod_label"/>

                    <TextView
                        android:id="@+id/product_detail_orderQty_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@+id/product_detail_orderQty_cod_label"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginLeft="150dp" />

                    <TextView
                        android:id="@+id/product_detail_total_cod_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total ( 3 x 123 ):"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/product_detail_orderQty_cod_label"/>

                    <TextView
                        android:id="@+id/product_detail_total_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="369 USD"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@+id/product_detail_total_cod_label"
                        app:layout_constraintLeft_toRightOf="@id/product_detail_cod_image"
                        android:layout_marginLeft="150dp" />

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/address_detail_cod_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/address_detail_cod_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Detail:"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/address_detail_delivery_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/address_detail_cod_label"/>

                    <TextView
                        android:id="@+id/address_detail_city_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/address_detail_delivery_cod"/>

                    <TextView
                        android:id="@+id/address_detail_state_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/address_detail_city_cod"/>
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/next_step_cod_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/continue_to_payment_cod_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Confirm Payment on Delivery"/>

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
