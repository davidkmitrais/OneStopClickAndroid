<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmation_payment_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.PaymentDetail.ConfirmationPaymentFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/product_detail_confirmation_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/product_detail_confirmation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Detail:"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:id="@+id/product_detail_confirmation_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_confirmation_label"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/product_detail_name_confirmation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/product_detail_confirmation_image"/>

                <TextView
                    android:id="@+id/product_detail_name_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You DontKnow"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/product_detail_name_confirmation_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="150dp" />

                <TextView
                    android:id="@+id/product_detail_orderQty_confirmation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Qty:"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/product_detail_name_confirmation_label"/>

                <TextView
                    android:id="@+id/product_detail_orderQty_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/product_detail_orderQty_confirmation_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="150dp" />

                <TextView
                    android:id="@+id/product_detail_total_confirmation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total ( 3 x 123 ):"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/product_detail_orderQty_confirmation_label"/>

                <TextView
                    android:id="@+id/product_detail_total_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="369 USD"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/product_detail_total_confirmation_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="150dp" />

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/address_detail_confirmation_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/address_detail_confirmation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Detail:"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/address_detail_delivery_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_detail_confirmation_label"/>

                <TextView
                    android:id="@+id/address_detail_city_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_detail_delivery_confirmation"/>

                <TextView
                    android:id="@+id/address_detail_state_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/address_detail_city_confirmation"/>
            </android.support.constraint.ConstraintLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/next_step_confirmation_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/back_to_select_address_conf_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="invisible"
                    android:text="Back to Select Address"/>

                <Button
                    android:id="@+id/continue_to_payment_conf_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="invisible"
                    android:text="Continue to Payment"/>

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>
        
    </LinearLayout>

</FrameLayout>
